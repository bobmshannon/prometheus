<%- @conf['logrotate']['global'].each do |global_setting| -%>
<%= global_setting %>
<%- end -%>

<%- @conf['logrotate']['files'].each do |file| -%>
<%- if file['hostnames'] == nil || file['hostnames'].include?(@host.hostname) -%>
<%= file['filepath'] %> {
	<%- file['settings'].each do |local_setting| -%>
	<%= local_setting %>
	<%- end -%>
}
<%- end -%>
<%- end -%>
